@model Inventory.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

@if (Model == null)
{
    <div class="alert alert-info">Product not found.</div>
}
else
{
    <h3 class="text-center mt-2">Delete Product</h3>

    <div class="alert alert-danger">
        <strong>Warning!</strong> Are you sure you want to delete this product?
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p><strong>Category:</strong> @(Model.Category?.CategoryName ?? "N/A")</p>
            <p><strong>Supplier:</strong> @(Model.Supplier?.SupplierName ?? "N/A")</p>
            <p><strong>Price:</strong> @Model.Price (EGP)</p>
            <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <!-- Note: asp-action is Delete -->
        <input type="hidden" asp-for="ProductID" /> <!-- Hidden field for ProductID -->
        <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
        </div>
    </form>
}

