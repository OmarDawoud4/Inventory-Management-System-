@using Models
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center">
    <div class="col-md-8">

        <form asp-action="SaveRegister" class="bg-white p-4 rounded-lg  mb-4 rounded-3">
        <h2 class="text-center mb-4">Register</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- First row: First Name and Last Name -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FName" class="form-control" id="floatingFName" placeholder="First Name">
                        <label for="floatingFName">First Name</label>
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="LName" class="form-control" id="floatingLName" placeholder="Last Name">
                        <label for="floatingLName">Last Name</label>
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Second row: Username and Email -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder="Username">
                        <label for="floatingUserName">Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="Email">
                        <label for="floatingEmail">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Third row: Password and Confirm Password -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="off">
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ConfirmedPassword" class="form-control" id="floatingConfirmedPassword" placeholder="Confirm Password" autocomplete="off">
                        <label for="floatingConfirmedPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Fourth row: Phone Number -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" id="floatingPhoneNumber" placeholder="Phone Number">
                        <label for="floatingPhoneNumber">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit button -->
            <div class="d-grid ">
                <button class="btn btn-lg btn-outline-success" type="submit">Create Account </button>
            </div>

            <div class="text-center mt-2">
                <a asp-action="Login" asp-controller="Account" class=" link-underline-opacity-0 text-dark  link-underline-opacity-50-hover">Already Have An Account?</a>

            </div>
        </form>
    </div>
</div>




