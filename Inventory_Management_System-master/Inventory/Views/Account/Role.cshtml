@using Models
@model RoleViewModel
@{
    ViewData["Title"] = "Role";
}

<div class="d-flex justify-content-center align-items-center p-4">
    <div class="">
        <h2 class="text-center mb-3">Create Roles</h2>
        <form asp-action="SaveRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input asp-for="RoleName" class="form-control" id="floatingInput" placeholder="">
                    <label for="floatingInput">Role name</label>
                </div>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>




