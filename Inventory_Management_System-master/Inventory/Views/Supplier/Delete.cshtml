@model Inventory.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h3 class="text-center mt-2">Delete Supplier</h3>

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this supplier?
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.SupplierName</h5>
    </div>
</div>

<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SupplierID" />
        <div class="mt-3 mb-3">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
            <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
        </div>
    </form>
</div>
