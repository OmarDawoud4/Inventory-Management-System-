@model Inventory.Models.Supplier

@{
    ViewBag.Title = "Products for @Model.SupplierName";
}

<div class="card-header bg-white">
    <h3 class="text-center mt-1">Products for @Model.SupplierName</h3>
</div>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-hover table-bordered mt-3 text-center">
        <thead class="table-success">
            <tr>
                
                <th>Product Name</th>
                <th>Stock Quantity</th>
                <th>Price (EGP)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                     
                    <td>@product.ProductName</td>
                    <td>@product.StockQuantity</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>

    @* <button onclick="window.print()" class="btn btn-outline-success">Print Products</button> *@
    <a asp-action="Index" class="btn btn-outline-primary">Back to Suppliers</a>
}
else
{
    <div class="alert alert-info text-center">
        No products available for this supplier.
    </div>
}
