@model Inventory.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h3 class="text-center mt-2">Delete Category</h3>

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete this category?
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.CategoryName</h5>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryID" />
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>
